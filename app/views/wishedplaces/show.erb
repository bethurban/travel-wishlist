<h1>On the wishlist: <%= @destination.destination %></h1>

<% if @destination.travel_partner %>
  <h4>Travel partner(s): </h4><%= @destination.travel_partner %>
<% end %>

<% if @destination.notes %>
  <h4>Notes: </h4><%= @destination.notes %>
<% end %>

<br></br>

<form>
  <input type="button" value="Edit this wishlist destination"
  onclick="window.location.href='/destinations/wish/<%=@destination.id%>/edit'"
  />
</form>
<br></br>
<form action='/destinations/wish/<%= @destination.id %>/delete' method="post">
  <input id="hidden" type="hidden" name="_method" value="delete">
  <input type="submit" value="Delete this destination">
</form>
