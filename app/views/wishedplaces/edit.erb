<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<h1><%= @destination.destination %></h1>

<h3>Add more detail about this wishlist destination or update - then submit:</h3>

<form action="/destinations/wish/<%= @destination.id%>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  *Destination name: <input type="text" name="destination" value="<%=@destination.destination%>">
  <br>
  Travel partner(s): <input type="text" name="travel_partner" value="<%=@destination.travel_partner%>">
  <br>
  Notes: <input type="text" name="notes" value="<%=@destination.notes%>">
  <br></br>
  <input type="submit" value="submit">
</form>
